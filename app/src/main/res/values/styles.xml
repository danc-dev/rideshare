<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_large">
        <!-- Customize your theme here. -->
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_small">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_large">
        <!-- Customize your theme here. -->
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/sky_blue</item>
    </style>

    <style name="text_info">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/common_google_signin_btn_text_dark</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="text_large">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
       </style>

    <style name="text_header">
        <!-- Customize your theme here. -->
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="progRadioButtons" parent="@style/Theme.AppCompat.Light">
        <item name="android:buttonTint">@color/red</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
