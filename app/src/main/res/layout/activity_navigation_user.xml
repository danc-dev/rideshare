<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <Button
                android:id="@+id/button_go2_calculate_cost"
                style="@style/button_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="@string/show_ride_cost" />

            <Button
                android:id="@+id/button_go2_make_booking"
                style="@style/button_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="@string/make_booking" />

            <Button
                android:id="@+id/button_go2_map"
                style="@style/button_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="@string/show_car_on_map" />

            <Button
                android:id="@+id/button_go2_ride_history"
                style="@style/button_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="@string/show_history" />

            <Button
                android:id="@+id/button_logout"
                style="@style/button_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="24dp"
                android:background="@color/chocolate"
                android:text="@string/logout" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>